<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label: 
                text:"User Login"
            TextInput:
                id: login_input
                hint_text:"Username"
            TextInput:
                id: password_input
                hint_text: "Password"
            Button: 
                text: "Login"
                on_press: root.login(root.ids.login_input.text,root.ids.password_input.text )
            Label:
                id: error_login 
                text:""        
        GridLayout: 
            cols:2
            Button: 
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>
    GridLayout:
        cols:1
        Label:
            text:"Sign up to feel better"
        TextInput:
            id: username
            hint_text:"Username"
        TextInput: 
            id: password
            hint_text:"Password"
        Button: 
            text:"Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
        Button: 
            text: "Go Back"
            on_press: root.back_to_home()   

<SignUpSuccess>
    GridLayout:
        cols:1
        Label:
            text:"Thank you for signing up"
        Button:
            text: "Login"
            on_press: root.back_to_mainpage()

<LoginSuccess>
    GridLayout: 
        cols:1
        Button: 
            text: "Logout"
            on_press: root.logout()
        Label: 
            text: "How are you feeling today?"
        TextInput:
            id: word_input
            hint_text: "Are you happy, sad, feeling unloved?"
        Button:
            text: "Enlighten Me!" 
            on_press: root.quotes(root.ids.word_input.text)
        Label:
            id: show_quote
            text: "" 

<RootWidget>: 
    LoginScreen: 
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name: "sign_up_success"
    LoginSuccess:
        name: "login_success"
